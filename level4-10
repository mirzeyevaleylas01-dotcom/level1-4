#include <iostream>
using namespace std;

int main() {
    double a, b;
    char op;
    cout << "Emeliyyat daxil edin (a + b): ";
    cin >> a >> op >> b;
    switch (op) {
        case '+': cout << a + b; break;
        case '-': cout << a - b; break;
        case '*': cout << a * b; break;
        case '/': 
            if (b != 0) cout << a / b;
            else cout << "Sifira bolme olmaz!";
            break;
        default: cout << "Yanlis operator!";
    }
    return 0;
}
